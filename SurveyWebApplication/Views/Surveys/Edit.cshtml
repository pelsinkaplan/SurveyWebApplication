@model SurveyWebApplication.Models.Survey

@{
    ViewData["Title"] = "Anketi Düzenle";
}

<h1>Anketi Düzenle</h1>

<h4>@Model.Header</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfApprovingRequired" class="control-label"></label>
                <input asp-for="NumberOfApprovingRequired" class="form-control" />
                <span asp-validation-for="NumberOfApprovingRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfYes" class="control-label"></label>
                <input asp-for="NumberOfYes" class="form-control" />
                <span asp-validation-for="NumberOfYes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfNo" class="control-label"></label>
                <input asp-for="NumberOfNo" class="form-control" />
                <span asp-validation-for="NumberOfNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anket Listesine Dön</a>
</div>

